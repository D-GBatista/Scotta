#include <stdio.h>

int main() {
    int matriz[3][3];
    int linha, coluna, contagem=0;

    printf("Preencha a matriz 3x3:\n");
    for(int i = 0; i < 3; i++) {
        for(int j = 0; j < 3; j++) {
            printf("Digite o valor para a posicao [%d][%d]: ", i, j);
            scanf("%d", &matriz[i][j]);
        }
    }

    printf("Matriz 3x3:\n");
    for(int i2 = 0; i2 < 3; i2++) {
        for(int j2 = 0; j2 < 3; j2++) {
            printf("%d ", matriz[i2][j2]);
            contagem++;
            if(contagem%3==0)
                printf("\n");
        }
    }
    
    printf("Digite a linha e a coluna que deseja verificar: ");
    printf("\nInforme a linha (0 a 2): ");
    scanf("%d", &linha);

    printf("Informe a coluna (0 a 2): ");
    scanf("%d", &coluna);

    return 0;
}
