#include <stdio.h>

int main() {
    int matriz[2][2];
    int linha, coluna, contagem=0, e, j, i;

    printf("Preencha a matriz 2x2:\n");
    for(i = 0; i < 2; i++) {
        for(j = 0; j < 2; j++) {
            printf("Digite o valor para a posicao [%d][%d]: ", i, j);
            scanf("%d", &matriz[i][j]);
        }
    }
  
    printf("Escolha um valor para multiplicar por escalar:");
    scanf(" %d", &e);
    
    printf("\nMatriz 2x2:\n");
    for(i = 0; i < 2; i++) {
        for(j = 0; j < 2; j++) {
            printf("%d ", matriz[i][j]);
            contagem++;
            if(contagem%2==0)
                printf("\n");
        }
    }

    contagem=0;
    
    printf("\nMatriz escalar por %d:\n", e);
    for(i = 0; i < 2; i++) {
        for(j = 0; j < 2; j++) {
            printf("%d ", matriz[i][j]*e);
            contagem++;
            if(contagem%2==0)
                printf("\n");
        }
    }
    
    return 0;
}
